<Window x:Class="ReminderApp.UI.WaterNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Water Reminder"
        Height="160"
        Width="320"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="8"
            Background="#FF103040"
            Padding="10"
            Margin="8"
            BorderBrush="#FF40A0FF"
            BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Time to drink water"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       TextWrapping="Wrap" />

            <TextBlock x:Name="MessageText"
                       Margin="0,6,0,8"
                       Foreground="White"
                       TextWrapping="Wrap" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Skip"
                        Width="70"
                        Margin="0,0,6,0"
                        Click="Skip_Click" />
                <Button Content="I drank it"
                        Width="90"
                        Click="Confirm_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

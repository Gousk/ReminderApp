<Window x:Class="ReminderApp.UI.WaterNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Water Reminder"
        Height="160"
        Width="320"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="10"
            Background="#0B141A"
            Padding="12"
            Margin="8"
            BorderBrush="{StaticResource AccentBrush}"
            BorderThickness="1.4">
        <Border.Effect>
            <DropShadowEffect Color="#182E28" BlurRadius="18" ShadowDepth="0" />
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="Time to drink water"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentBrush}"
                       TextWrapping="Wrap" />

            <TextBlock x:Name="MessageText"
                       Margin="0,6,0,10"
                       Foreground="{StaticResource TextPrimary}"
                       TextWrapping="Wrap" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Skip"
                        Width="80"
                        Margin="0,0,6,0"
                        Click="Skip_Click" />
                <Button Content="I drank it"
                        Width="110"
                        Click="Confirm_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

<Window x:Class="ReminderApp.UI.WaterNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Water Reminder"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual">
    <Border Padding="16" Background="#FF0F172A">
        <StackPanel>
            <TextBlock x:Name="MessageText"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="ProgressText"
                       Margin="0,6,0,10"
                       Foreground="#FFCED5E0"
                       FontSize="13"
                       TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Content="Skip"
                        Width="80"
                        Padding="6,4"
                        Margin="0,0,6,0"
                        Click="Skip_Click"/>
                <Button Content="Drink"
                        Width="120"
                        Padding="6,4"
                        Click="Confirm_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
